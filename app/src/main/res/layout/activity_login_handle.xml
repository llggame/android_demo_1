<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_handle"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/back_box">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/left_arrow"
                android:background="@null"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:id="@+id/back_button"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/back_box"
            android:layout_marginTop="10dp"
            android:id="@+id/title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="#333333"
                android:textSize="25dp"
                android:paddingLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/title"
            android:id="@+id/edit">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:shrinkColumns="0,1,2,3">
                <TableRow
                    android:background="@drawable/bottom_border"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="16dp"/>
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入你的手机号"
                        android:textSize="16dp"
                        android:id="@+id/phone_text"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/empty"
                        android:layout_column="2"
                        android:layout_span="2"
                        android:id="@+id/empty_phone"/>
                </TableRow>
                <TableRow
                    android:background="@drawable/bottom_border"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="密码"
                        android:textSize="16dp"/>
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入你的密码"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:id="@+id/passwd_text"/>
                    <Button
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/empty"
                        android:id="@+id/empty_passwd"/>
                    <Button
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/blind_eyes"
                        android:id="@+id/eyes"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edit"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/login_button_box">
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_1"
                android:textColor="#ffffff"
                android:text="登录"
                android:textSize="20dp"
                android:id="@+id/login_button"
                android:onClick="login"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/login_button_box"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|center"
                android:layout_weight="1"
                android:textColor="#00a4e2"
                android:textSize="16dp"
                android:text="立即注册"
                android:id="@+id/register_button"
                android:onClick="register"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right|center"
                android:layout_weight="1"
                android:textColor="#00a4e2"
                android:textSize="16dp"
                android:text="忘记密码"
                android:id="@+id/forget_button"
                android:onClick="forget"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>